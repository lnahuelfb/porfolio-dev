---
import Mail from "./icons/Mail.astro";
---

<article>
  <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
    <Mail class="size-7" />
    Contacto
  </h2>

  <form action="" class="flex flex-col" method="post">
    <label for="name" class="flex flex-col">
      Nombre:
      <input type="text" id="company" required />
    </label>

    <label for="company" class="flex flex-col">
      Empresa:
      <input type="text" id="name" />
    </label>

    <label for="subject" class="flex flex-col">
      Motivo del mensaje:
      <input type="text" id="subject" required />
    </label>

    <label for="email" class="flex flex-col">
      Email de contacto:
      <input type="text" id="email" required />
    </label>

    <label for="message" class="flex flex-col">
      Mensaje:
      <textarea id="message" class="min-h-12" required></textarea>
    </label>

    <input
      type="submit"
      class="flex justify-center items-center my-10 rounded-full border border-white/10 gap-x-4 py-1 px-2 text-xs md:text-base md:py-2 md:px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition cursor-pointer"
    />
  </form>
</article>
