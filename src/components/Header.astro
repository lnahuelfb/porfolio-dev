---
import Menu from "./icons/Menu.astro";
---

<header class="flex justify-center items-center py-5 sticky top-0 z-50 px-8">
  <div
    class="flex w-[936px] justify-between min-[320px]:bg-black lg:bg-black/40 lg:px-12 lg:rounded-full"
  >
    <figure class="flex items-center">
      <img src="/nahu.png" alt="" class="w-10 mr-4" />
    </figure>

    <!-- Menú de hamburguesa -->

    <nav class="w-[70%] p-4 min-[0px]:hidden lg:block">
      <div class="flex flex-row items-center justify-around h-full">
        <a href="#top" class="text-gray-300 hover:text-white">Inicio</a>
        <a href="#experiencia" class="text-gray-300 hover:text-white"
          >Experiencia</a
        >
        <a href="#proyectos" class="text-gray-300 hover:text-white">Proyectos</a
        >
        <a href="#sobre-mi" class="text-gray-300 hover:text-white">Sobre mí</a>
        <a href="#contacto" class="text-gray-300 hover:text-white">Contacto</a>
      </div>
    </nav>
    <div class="lg:hidden relative">
      <button id="menu-toggle" class="text-white focus:outline-none">
        <Menu />
      </button>
    </div>
  </div>
</header>

<!-- Menú desplegable -->
<nav
  id="menu"
  class="hidden fixed top-0 left-0 w-full h-full bg-[#16161e] p-4 z-40 lg:hidden"
>
  <div class="flex flex-col items-center justify-center h-full">
    <a href="#top" class="text-gray-300 hover:text-white mb-4">Inicio</a>
    <a href="#experiencia" class="text-gray-300 hover:text-white mb-4"
      >Experiencia</a
    >
    <a href="#proyectos" class="text-gray-300 hover:text-white mb-4"
      >Proyectos</a
    >
    <a href="#sobre-mi" class="text-gray-300 hover:text-white mb-4">Sobre mí</a>
    <a href="#contacto" class="text-gray-300 hover:text-white mb-4">Contacto</a>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const menuIcon = document.querySelector(".menu-icon");
  const menu = document.getElementById("menu");

  menuToggle.addEventListener("click", () => {
    menu.classList.toggle("hidden");

    if (menu.classList.contains("hidden")) {
      menuIcon.innerHTML = `
        <svg class="h-6 w-6 menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      `;
    } else {
      menuIcon.innerHTML = `
        <svg class="h-6 w-6 menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      `;
    }

    document.body.style.overflow = menu.classList.contains("hidden")
      ? "auto"
      : "hidden";
  });

  const menuLinks = document.querySelectorAll("#menu a");

  menuLinks.forEach((link) => {
    link.addEventListener("click", () => {
      menu.classList.add("hidden");
      menuIcon.innerHTML = `
        <svg class="h-6 w-6 menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      `;
      document.body.style.overflow = "auto";
    });
  });
</script>
